<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lgreen</item>
        <item name="colorSecondaryVariant">@color/lgreen_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.Cats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="CatCard.TextView">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:padding">@dimen/spacing_normal_16</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="CatCard"/>
</resources>