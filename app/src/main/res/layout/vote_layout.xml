<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vote_buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bar_size"
    android:layout_gravity="bottom"
    android:background="@color/vote_view_background">

    <ImageButton
        android:id="@+id/btn_like"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_vote_unchecked"
        android:padding="@dimen/spacing_small_8"
        android:src="@drawable/thumb_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_dislike"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/btn_dislike"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_vote_unchecked"
        android:padding="@dimen/spacing_small_8"
        android:src="@drawable/thumb_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_like"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>