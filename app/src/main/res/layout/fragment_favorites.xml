<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.molchanov.cats.viewmodels.favorites.FavoritesViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.favorites.FavoritesFragment">

        <!-- TODO: Реализовать макет рв для избранного -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/rv_item_margin"
            android:paddingStart="@dimen/rv_item_margin"
            android:paddingEnd="@dimen/rv_item_margin"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:scrollbars="vertical"
            app:listData="@{viewModel.favoriteImages}"
            tools:listitem="@layout/image_item"
             />

    </FrameLayout>
</layout>