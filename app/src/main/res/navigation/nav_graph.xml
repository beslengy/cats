<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/uploadedFragment"
        android:name="com.molchanov.cats.ui.uploaded.UploadedFragment"
        android:label="@string/uploaded_fragment_label"
        tools:layout="@layout/fragment_uploaded" >
        <action
            android:id="@+id/action_uploadedFragment_to_catCardFragment"
            app:destination="@id/catCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.molchanov.cats.ui.favorites.FavoritesFragment"
        android:label="@string/favorites_fragment_label"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_catCardFragment"
            app:destination="@id/catCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.molchanov.cats.ui.home.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_catCardFragment"
            app:destination="@id/catCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/catCardFragment"
        android:name="com.molchanov.cats.ui.catcard.CatCardFragment"
        android:label=""
        tools:layout="@layout/fragment_cat_card" >
        <argument
            android:name="imageId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <argument
            android:name="voteValue"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="analysis"
            app:argType="com.molchanov.cats.network.networkmodels.Analysis"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>