<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.catcard.CatCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cat_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            tools:src="@drawable/example_cats" />

        <TextView
            android:id="@+id/tv_cat_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_small_8"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="@dimen/font_large_20"
            app:layout_constraintVertical_weight="1"
            tools:text="@string/bottom_sheet_behavior" />
    </LinearLayout>
</ScrollView>